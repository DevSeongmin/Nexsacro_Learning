};

this.fnCallback = function(svcID, errCD, errMSG)
{
    if (errCD < 0) {
        this.alert("에러: " + errMSG);
        return;
    }
    
    if (svcID == "getDepartments") {
        // 데이터 로드 성공 시 처리
        trace("부서 데이터 수신 성공: " + this.ds_department.getRowCount() + "건");
